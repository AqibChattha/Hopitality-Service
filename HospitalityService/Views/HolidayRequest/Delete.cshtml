@model HospitalityService.Models.Domain.HolidayRequest

@{
    ViewData["Title"] = "Delete";
}
<div class="vw-95 h-screen overflow-auto bg-gradient-to-tr from-blue-200 via-indigo-200 to-pink-200 pt-10 pl-20 pb-20 pr-20">
    <div class="display-5">Delete this holiday request?</div>
    <hr />
    <div class="row">
        <div class="row">
            <div class="col">
                <div class="row font-bold justify-content-end pr-10">
            @Html.DisplayNameFor(model => model.Title)
                </div>
                <div class="row font-bold justify-content-end pr-10">
            @Html.DisplayNameFor(model => model.Description)
                </div>
                <div class="row font-bold justify-content-end pr-10">
            @Html.DisplayNameFor(model => model.Date)
                </div>
                <div class="row font-bold justify-content-end pr-10">
            @Html.DisplayNameFor(model => model.Status)
                </div>
                <div class="row font-bold justify-content-end pr-10">
            @Html.DisplayNameFor(model => model.IsAccepted)
                </div>
            </div>
            <div class="col">
                <div class="row pl-10">
            @Html.DisplayFor(model => model.Title)
                </div>
                <div class="row pl-10">
            @Html.DisplayFor(model => model.Description)
                </div>
                <div class="row pl-10">
            @Html.DisplayFor(model => model.Date)
                </div>
                @if (Model.Status)
                {
                    <div class="row pl-10">
                        Reviewed
                    </div>
                    @if (Model.IsAccepted)
                    {
                        <div class="row pl-10">
                                Accepted
                        </div>
                    }else{
                        <div class="row pl-10">
                                Rejected
                        </div>
                    }
                }else{
					<div class="row pl-10">
						Not Reviewed Yet
					</div>
                }
            </div>
        </div>

        <form class="text-center mt-3" asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger w-25" />
        </form>
        <div class="text-center mt-3" style="-webkit-text-stroke:thin; text-decoration-line:overline;">
        <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>