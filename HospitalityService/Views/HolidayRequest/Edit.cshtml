@model HospitalityService.Models.Domain.HolidayRequest

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid min-h-screen bg-gradient-to-tr from-blue-200 via-indigo-200 to-pink-200 pt-3 pb-3">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                    <div class="text-center display-5 pt-5 pb-3">Edit holiday request details</div>
                    <hr class="mb-4" />
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group mt-3">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="Date" class="control-label"></label>
                            <input asp-for="Date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                        @if (GlobalVariables.IS_ADMIN_LOGGED_IN)
                        {
                            <div class="form-group mt-3">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model=>model.Status)
                                </label>
                            </div>
                            <div class="form-group mt-3">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsAccepted" /> @Html.DisplayNameFor(model=>model.IsAccepted)
                                </label>
                            </div>
                        }
                    <div class="form-group mt-3 mt-md-0 text-end mt-md-3">
                        <button type="submit" class="btn btn-primary w-100">Save</button>
                    </div>
                    </form>
                    <div class="text-center mt-3" style="-webkit-text-stroke:thin; text-decoration-line:overline;">
                        <a asp-action="Index">Back to List</a>
                    </div>
            </div>
        </div>
    </div>
</div>
