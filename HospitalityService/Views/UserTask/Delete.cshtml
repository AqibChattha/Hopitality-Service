@model HospitalityService.Models.Domain.UserTask

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid min-h-screen bg-gradient-to-tr from-blue-200 via-indigo-200 to-pink-200 pt-5 pb-5">
    <div class="row justify-content-center">
        <div class="col-sm-10 col-md-8 col-lg-6">
            <div class="text-center display-5 pt-5 pb-3">Delete this task?</div>
            <hr class="mb-4" />
            <div class="row mb-3">
                <div class="col-4 col-sm-3 col-lg-2 text-right font-weight-bold">
                    @Html.DisplayNameFor(model => model.Title)
                </div>
                <div class="col-8 col-sm-9 col-lg-10">
                    @Html.DisplayFor(model => model.Title)
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-4 col-sm-3 col-lg-2 text-right font-weight-bold">
                    @Html.DisplayNameFor(model => model.Description)
                </div>
                <div class="col-8 col-sm-9 col-lg-10">
                    @Html.DisplayFor(model => model.Description)
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-4 col-sm-3 col-lg-2 text-right font-weight-bold">
                    @Html.DisplayNameFor(model => model.Deadline)
                </div>
                <div class="col-8 col-sm-9 col-lg-10">
                    @Html.DisplayFor(model => model.Deadline)
                </div>
            </div>
            <div class="row justify-content-center mt-4">
                <form asp-action="Delete" class="col-8 col-sm-6 col-md-5 col-lg-4">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger w-100" />
                </form>
            </div>
            <div class="row justify-content-center mt-3">
                <div class="col-auto">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div> 