@model HospitalityService.Models.Domain.UserTask

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid min-h-screen bg-gradient-to-tr from-blue-200 via-indigo-200 to-pink-200">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="text-center display-5 pt-5 pb-3">Add a new task.</div>
            <hr class="mb-4" />

            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" required>
                    <div class="invalid-feedback">Please provide a title.</div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" required>
                    <div class="invalid-feedback">Please provide an description.</div>
                </div>

                <div class="form-group">
                    <label asp-for="Deadline" class="form-label"></label>
                    <input asp-for="Deadline" class="form-control" required>
                    <div class="invalid-feedback">Please provide a date.</div>
                </div>

                <div class="form-group mt-3 mt-md-0 text-end mt-md-3">
                    <button type="submit" class="btn btn-primary w-100">Add</button>
                </div>
            </form>

            <div class="text-center mt-3" style="-webkit-text-stroke:thin; text-decoration-line:overline;">
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
