@model HospitalityService.Models.Domain.UserTask

@{
    ViewData["Title"] = "Create";
}

<div class="vw-95 h-screen overflow-auto bg-gradient-to-tr from-blue-200 via-indigo-200 to-pink-200 pt-10 pl-20 pb-20 pr-20">
<div class="display-5">Add a new task.</div>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form class="mt-5" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-1">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 text-end">
                <input type="submit" value="Create" class="btn btn-primary w-20" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3" style="-webkit-text-stroke:thin; text-decoration-line:overline;">
    <a asp-action="Index">Back to List</a>
</div>
</div>